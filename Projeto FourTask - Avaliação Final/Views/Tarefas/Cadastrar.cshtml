@model CadastrarTarefaViewModel

<h1>Cadastrar Tarefa</h1>


<form asp-action="CriarTarefa">

    <div class="mb-3">
        <label asp-for="@Model.Titulo" class="form-label">  </label>
        <input asp-for="@Model.Titulo" class="form-control" value=@Model.Titulo />
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Descricao" class="form-label">  </label>
        <input asp-for="@Model.Descricao" class="form-control" value=@Model.Descricao />
    </div>

    <div class="mb-3">
        <label asp-for="@Model.DataLimite" class="form-label">  </label>
        <input asp-for="@Model.DataLimite" class="form-control" value=@Model.DataLimite />
    </div>

    <div class="mb-3">
        <label class="form-label"> Equipe </label>
        @Html.DropDownListFor(m => m.EquipeId, @Model.Equipes.Select(x => new SelectListItem(x.Nome, x.EquipeId.ToString())), "Selecione a equipe",  new { @class="form-control" })
    </div>

    <input type="submit" value="Salvar" class="btn btn-primary" />

</form>